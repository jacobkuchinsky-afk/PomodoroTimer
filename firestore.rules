rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User document - only the owner can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Presets subcollection - needs separate match for subcollection queries
    match /users/{userId}/presets/{presetId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analytics subcollection - for time tracking sessions
    match /users/{userId}/analytics/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Timer state subcollection - for persisting timer state across devices
    match /users/{userId}/timerState/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Leaderboard collection - readable by all authenticated users, writable only by owner
    match /leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
